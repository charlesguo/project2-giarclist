
<!-- Header -->
<header id="static-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <br/>

                <%= form_tag(listings_path, :method => "get", id: "search-form") do %>
                  <%= text_field_tag :search, params[:search], placeholder: "Search Listings", class: "search-primary-home" %>
                  <%= submit_tag "Search", class: "btn btn-primary btn-primary-home"%>
                <% end %>

                <hr/>

                <i class="fa fa-shopping-bag hero-text-1"></i>
                <div class="intro-text">
                    <span class="hero-text-1">Giarclist</span>
                    <hr>
                    <span class="hero-text-2">Singapore's Best Online Marketplace for Buying and Selling Stuff and Services</span>

                    <br/>
                </div>
            </div>
        </div>
    </div>
</header>
